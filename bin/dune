(install
 (files (lxr_backup lxr_restore lxr_chunks
                    lxr_relkeys lxr_relfiles
                    lxr_filehash
                    lxr_compare lxr_incremental))
 (section bin))

(executable
 (public_name lxr_backup)
 (package elykseer)
 (name lxr_backup)
 (modules lxr_backup)
 (preprocess (pps lwt_ppx))
 (ocamlopt_flags -O3 -cclib -s)
 (libraries elykseer elykseer_base elykseer_utils)
)

